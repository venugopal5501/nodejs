<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-
EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
</style>    
<title></title>
</head>

<body>
    <div class="container">
        <h1 class="text-center mt-3 mb-3">
            <%= title %>
        </h1>
        
       

        <% if(action=='add' ) { %>
            <div class="card">
                <div class="card-header">Sample Form</div>
                <div class="card-body">
                    <form method="POST" action="/sample/add_sample">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>EmpNo</label>
                                    <input type="number" name="empno" id="No" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Name</label>
                                    <input type="text" name="name" id="name" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Email</label>
                                    <input type="email" name="email" id="email" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Date of Joining</label>
                                    <input type="text" name="doj" id="doj" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Basic Pay</label>
                                    <input type="number" name="basic_pay" id="basic_pay" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <input type="submit" name="submit_button" class="btn btn-primary" value="Add" />
                        </div>
                    </form>
                </div>
            </div>
        <% } else { %>
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col">Sample Data</div>
                        <div class="col">
                            <a href="sample/add" class="btn btn-success btn-sm float-end">Add</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" border="">
                            <tr>
                                <th>Emp No</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Date of Joining</th>
                                <th>Total Year of Experience</th>
                                <th>Basic Pay</th>
                                <th>Gross Pay</th>
                                <th>Net Pay</th>
                                <th>Actions</th>
                            </tr>
                            <% if(Data.length > 0){ %>
                                <% Data.forEach(function(data){ %>
                                    <tr>
                                        <td><%= data.empno %></td>
                                        <td><%= data.name %></td>
                                        <td><%= data.email %></td>
                                        <td><%= formateDate(data.doj) %></td>
                                        <td><%= year(data.doj) %></td>
                                        <td><%= data.basic_pay %></td>
                                        <td><%= data.Gross_Pay %></td>
                                        <td><%= data.Net_Pay %></td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="/sample/edit/<%= data.empno %>" class="btn btn-primary">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </a>
                                                <a href="/sample/delete/<%=data.empno%>" class="btn btn-danger">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                                <a href="/sample/view/<%=data.empno%>" class="btn btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); } else { %>
                                    <tr>
                                        <td colspan="9">No Data Found</td>
                                    </tr>
                                <% } %>
                        </table>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-
MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>